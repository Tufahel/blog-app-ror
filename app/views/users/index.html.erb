<% @all_users.each do |user| %>
    <div class="d-flex mx-2 my-2">
        <img src="<%= user.photo %>" alt="" width="200" height="150" /> <br>
        <div class="card w-75 mx-2 p-2">
            <%= link_to user_path(user.id) do %>
                <h2 class="text-start"><%= user.name %></h2>
            <% end %>
            <p class="text-end">Number of posts: <%= user.posts.count %></p>
        </div>
    </div>
<% end %>